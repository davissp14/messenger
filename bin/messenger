#!/usr/bin/env ruby

require_relative '../lib/messenger'

options = {}
OptionParser.new do |parser|
  parser.banner = "Usage: messenger [options]"

  parser.on("-h", "--help", "Show this help message") do
    puts parser
  end
  parser.on("-i", "--install", "Install messenger dependencies") do
    puts "Installing"
  end
  parser.on("--start", "Start the server client") do
    Messenger::Client.start!
  end
  parser.on("-s", "--send Message", "Send message to messenger server") do |message|
    options[:message] = message
  end
end.parse!

if options[:message]
  Messenger::Send.message(options[:message])
end


